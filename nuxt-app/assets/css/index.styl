html
  //main colors
  --main-color: #42b883
  --dark-main-color: #363636
  --borders: #dadada
  --main-bg: white
  --nav-bg: var(--main-bg)
  --contrast-bg: #6da56d
  --header-bar-color: linear-gradient(150deg, var(--contrast-bg), var(--dark-main-color) 70%, var(--dark-main-color) 30%)

  //text
  --bright-letter: floralwhite
  --dark-letter: black

  font-family BlinkMacSystemFont,-apple-system,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,Helvetica,Arial,sans-serif

@import "main.styl"